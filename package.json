{
  "name": "dets",
  "version": "0.9.4",
  "description": "A TypeScript declaration file bundler.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "ts-node example/play.ts",
    "build": "npm run bundle && npm run transpile && cp lib/cli.js dist/ && npm run declare",
    "bundle": "ncc build src/index.ts --external typescript --out dist",
    "declare": "node dist/cli.js --files src/index.ts --imports typescript --types src/index.ts --out dist/index.d.ts",
    "transpile": "tsc",
    "test": "jest"
  },
  "keywords": [
    "typescript",
    "declaration",
    "bundler",
    "tds",
    "file",
    "generate",
    "types"
  ],
  "author": "Florian Rappl <mail@florian-rappl.de>",
  "license": "MIT",
  "engines": {
    "node": ">=10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlorianRappl/dets.git"
  },
  "bugs": {
    "url": "https://github.com/FlorianRappl/dets/issues"
  },
  "bin": {
    "dets": "./lib/cli.js"
  },
  "dependencies": {
    "yargs": "^15.4.1"
  },
  "peerDependencies": {
    "typescript": "3.x || 4.x"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.22",
    "@types/node": "14.11.2",
    "@types/react": "16.9.49",
    "@types/react-redux": "7.1.9",
    "@types/react-router": "5.1.8",
    "@types/react-router-dom": "5.1.5",
    "@types/styled-components": "5.1.3",
    "@types/yargs": "^15.0.13",
    "@zeit/ncc": "^0.22.3",
    "deox": "^4.0.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "piral-core": "^0.11.8",
    "redux-saga": "^1.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "4.0.3",
    "vue": "^2.6.12"
  }
}
